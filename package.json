{
  "name": "react-echarts-library",
  "version": "1.1.0",
  "description": "A modern React wrapper for Apache ECharts with TypeScript support, hooks, and full React 18/19 compatibility",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "react",
    "echarts",
    "charts",
    "visualization",
    "react-component",
    "typescript",
    "data-visualization"
  ],
  "author": "Yerzhan Sagyt",
  "license": "MIT",
  "peerDependencies": {
    "echarts": "^5.4.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@types/echarts": "^4.9.22",
    "fast-deep-equal": "^3.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "echarts": "^5.4.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "vitest-canvas-mock": "^0.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yerzhansa/react-echarts-library.git"
  },
  "homepage": "https://github.com/yerzhansa/react-echarts-library",
  "bugs": {
    "url": "https://github.com/yerzhansa/react-echarts-library/issues"
  }
}
